<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EAD7FA"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#8150CC"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginEnd="10dp">


            <TextView
                android:id="@+id/texto_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mewtwo"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texto_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: Psíquico"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/texto_habilidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habilidad: Presión"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/texto_datos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Descripción Mewtwo"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
